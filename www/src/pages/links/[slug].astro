---
import { getCollection } from 'astro:content';
import Attributes from '../../components/layout/Attributes.astro';
import Navigation from '../../components/layout/Navigation.astro';
import MainHead from '../../components/MainHead.astro';

export async function getStaticPaths({}) {
  let allLinks = await getCollection('links');

  return allLinks.map((link) => {
    return {
      params: { slug: link.data.slug },
      props: { link },
    };
  });
}

const { link } = Astro.props;
const { Content } = await link.render();
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <MainHead
      title={link.data.title}
      description={`a link I thought was useful titled ${link.data.title}`}
    />
  </head>
  <body class="site-container">
    <Navigation />
    <main class="container" data-pagefind-body>
      <header>
        <h1>ğŸ”—<a href={link.data.url}>{link.data.title}</a></h1>
        <Attributes data={link.data} />
      </header>
      <section class="content">
        <Content />  
      </section>
    </main> 
  </body>
</html>
