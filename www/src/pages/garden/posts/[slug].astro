---
import { getCollection } from 'astro:content';

import readingTime from 'reading-time';
import AuthorCard from '../../../components/AuthorCard.astro';
import WebMentions from '../../../components/webmentions/WebMentions.astro';
import ContentLayout from '../../../layouts/ContentLayout.astro';

import { getSortedPosts } from '../../../utils/posts';

export async function getStaticPaths({}) {
  let allPosts = await getCollection('posts', ({ data }) => {
    return data.draft === false && data.type == 'post';
  });
  let allSortedPosts = getSortedPosts(allPosts);

  return allSortedPosts.map((post, idx) => {
    return {
      params: { slug: post.slug },
      props: { post },
    };
  });
}

const { post } = Astro.props;
const { Content } = await post.render();
const rt = readingTime(post.body).text;
---

<ContentLayout data={{ ...post.data, readTime: rt }}>
  <Content />
  <AuthorCard />
  <WebMentions />
</ContentLayout>
