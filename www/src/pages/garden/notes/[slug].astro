---
import { getCollection } from 'astro:content';
import readingTime from 'reading-time';
import AuthorCard from '../../../components/AuthorCard.astro';
import Attributes from '../../../components/layout/Attributes.astro';
import Navigation from '../../../components/layout/Navigation.astro';
import MainHead from '../../../components/MainHead.astro';
import WebMentions from '../../../components/webmentions/WebMentions.astro';
import ContentLayout from '../../../layouts/ContentLayout.astro';

export async function getStaticPaths({}) {
  let allnotes = await getCollection('posts', ({ data }) => {
    return data.type == 'note';
  });

  return allnotes.map((note) => {
    return {
      params: { slug: note.slug },
      props: { note },
    };
  });
}

const { note } = Astro.props;
const { Content } = await note.render();
const rt = readingTime(note.body).text;
---

<ContentLayout data={{ ...note.data, readTime: rt }}>
  <Content />
  <AuthorCard />
  <WebMentions />
</ContentLayout>
