---
const currentDate = new Date();
const dateFormatter = Intl.DateTimeFormat('en-GB', {
  year: 'numeric',
  month: '2-digit',
  day: '2-digit',
  hour: '2-digit',
  minute: '2-digit',
  second: '2-digit',
  hour12: false
});
const dateFormatted = dateFormatter.format(currentDate);
const dateDay = dateFormatted.split(',')[0]
const dateTime = dateFormatted.split(',')[1].trim()
---

