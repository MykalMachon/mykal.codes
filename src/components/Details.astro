---
export interface Props {
  summary: string;
}

const { summary } = Astro.props;
---

<details>
  <summary>
    <p>{summary}</p>
  </summary>
  <slot />
</details>

<style lang="scss">
  details {
    position: relative;
    border: 1px solid var(--acc-1);
    transition: border 0.2s var(--ease-2);
    border-radius: var(--radius-1);
    padding: 1em;
    background: var(--paper-2);
    margin: var(--size-3) 0;
    &:focus-within {
      outline-style: solid;
      outline-color: var(--paper-3);
      outline-width: 2px;
      outline-offset: 2px;
    }
  }

  details[open] {
    border-color: var(--acc-2);
  }

  details summary {
    position: relative;
    font-style: italic;
    list-style: none;
    user-select: none;

    p {
      margin: 0;
    }

    &:hover {
      cursor: pointer;
      &:after {
        opacity: 1;
      }
    }

    &:focus {
      outline: none;
    }

    &::marker {
      display: none;
    }

    &:after {
      content: '';
      transform: rotate(0deg);
      position: absolute;
      right: 0;
      top: calc(50% - 0.625em);
      width: 1.25em;
      height: 1.25em;
      transition: all 0.3s var(--ease-4);
      opacity: 0.5;
      background-image: url('/images/chevron-small.svg');
    }
  }

  details[open] summary:after {
    transform: rotate(-180deg);
  }

  @media (prefers-color-scheme: dark) {
    details summary::after {
      filter: invert(100%) hue-rotate(50deg);
    }
  }
</style>
